<%= simple_form_for [:mc, @sponsor] do |f| %>
  <%= f.input :name, label: 'Sponsor Name' %>
  <%= f.input :img, label: 'Logo Image URL (e.g. https://imgur.com/iP43yT.jpg)',
    input_html: { value: f.object.img || 'https://' } %>
  <!-- The field "website" was previously "link" -->
  <%= f.input :website, label: 'Sponsor Website URL (include "https://")',
    input_html: { value: f.object.website || 'https://' } %>
  <%= f.input :description %>
  <%= f.input :featured %>
  <br>
  <%= f.button :submit, 'Submit', class: 'radius success' %>
  <%= link_to 'Cancel', :back, class: 'radius button alert' %>
<% end %>
