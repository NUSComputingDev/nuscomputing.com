<%= simple_form_for [:mc, @event] do |f| %>
  <%= f.input :name, label: 'Event Name' %>
  <%= f.input :img, label: 'Image URL (e.g. https://imgur.com/iP43yT.jpg)',
    input_html: { value: f.object.img || 'https://' } %>
  <%= f.input :externalpage, label: 'External Page URL (e.g. Facebook post)' %>
  <%= f.input :featured, label: 'Featured on Home Page?', as: 'radio_buttons' %>
  <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full'} } %>
  <br>
  <%= f.button :submit, 'Submit', class: 'radius success' %>
  <%= link_to "Cancel", :back, class: 'radius button alert' %>
<% end %>
