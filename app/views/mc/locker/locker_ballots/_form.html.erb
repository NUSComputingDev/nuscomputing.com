<%= simple_form_for [:mc, :locker, @ballot] do |f| %>
	<%= f.association :user, collection: User.all.order(:uid), label_method: :uid_and_name, value_method: :id, include_blank: false %>
	<%= f.association :round, label_method: :name, value_method: :id, include_blank: false %>
	<%= f.input :location, collection: Locker.locations.symbolize_keys.keys, include_blank: false %>
  <%= f.button :submit, 'Submit', class: 'radius success' %>
  <%= link_to 'Cancel', :back, class: 'radius button alert' %>
<% end %>
