<%= simple_form_for [:mc, @product] do |f| %>
  <%= f.input :name, label: 'Product Name' %>
  <%= f.input :description, label: 'Description',
    input_html: { value: f.object.description || 'No description available.' } %>
  <%= f.input :options, label: 'Available Customisations/Options (e.g. colours, sizes, etc.)' %>
  <%= f.input :price, label: 'Price (SGD) (e.g. 2.50)' %>
  <%= f.input :stock, label: 'Stock Left (must be a non-negative integer)' %>
  <%= f.input :orders, label: 'Current Number of Orders/Reservations:' %>
  <br>
  <%= f.button :submit, 'Submit', class: 'radius success' %>
  <%= link_to 'Cancel', :back, class: 'radius button alert' %>
<% end %>
